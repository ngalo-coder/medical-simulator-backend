{
  "name": "medical-case-simulator-backend",
  "version": "1.0.0",
  "description": "World-class medical case simulator backend for clinical education",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Build completed successfully'",
    "test": "cross-env NODE_ENV=test jest --verbose --runInBand",
    "test:watch": "cross-env NODE_ENV=test jest --watch --runInBand",
    "test:coverage": "cross-env NODE_ENV=test jest --coverage --runInBand",
    "test:unit": "cross-env NODE_ENV=test jest tests/unit --runInBand",
    "test:integration": "cross-env NODE_ENV=test jest tests/integration --runInBand",
    "test:ci": "cross-env NODE_ENV=test jest --coverage --ci --runInBand --forceExit",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "seed": "node seed.js",
    "format": "prettier --write \"**/*.{js,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,json,md}\"",
    "migrate:rollback": "node scripts/migrate.js rollback",
    "migrate:status": "node scripts/migrate.js status",
    "health-check:json": "node scripts/healthCheck.js --json",
    "security:audit": "npm audit --audit-level moderate",
    "validate": "npm run lint && npm run test:ci && npm run security:audit",
    "migrate": "node scripts/migrate.js",
    "worker": "node workers/index.js",
    "docs": "jsdoc -c jsdoc.conf.json",
    "health-check": "node scripts/healthCheck.js",
    "pm2:start": "pm2 start deployment/ecosystem.config.js",
    "pm2:stop": "pm2 stop deployment/ecosystem.config.js",
    "pm2:restart": "pm2 restart deployment/ecosystem.config.js",
    "pm2:logs": "pm2 logs medical-simulator-api",
    "docker:build": "docker build -t medical-simulator-api .",
    "docker:run": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "docker:logs": "docker-compose logs -f api",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "precommit": "npm run lint && npm run test:unit",
    "prepare": "husky install || true"
  },
  "keywords": [
    "medical",
    "education",
    "simulation",
    "healthcare",
    "learning",
    "clinical"
  ],
  "author": "Medical Education Team",
  "license": "MIT",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "dotenv": "^17.2.0",
    "eslint-plugin-promise": "^6.0.0",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.6.1",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "moment": "^2.30.1",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.5",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.6.1",
    "socket.io": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.57.1",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-security": "^1.7.1",
    "husky": "^9.1.7",
    "jest": "^30.0.5",
    "jest-environment-node": "^30.0.5",
    "jsdoc": "^4.0.4",
    "lint-staged": "^16.1.2",
    "mongodb-memory-server": "^10.1.4",
    "nodemon": "^3.1.10",
    "prettier": "^3.6.2",
    "supertest": "^7.1.4",
    "nyc": "^15.1.0"
  }
}
